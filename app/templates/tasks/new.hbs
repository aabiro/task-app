<form>
  <div class="form-group">
    <label>Title</label>
    {{input type="text" class="form-control" value=title placeholder="Add Task..."}}
  </div>
    <div class="form-group">
      <label>Due Date</label>
        {{bs-datetimepicker date=mydate format='YYYY-MM-DD' value=model}}
    </div>
  <div class="form-group">
    <label>Description</label>
    {{textarea class="form-control" value=description placeholder="Describe Task..."}}
  </div>

  <button {{action 'addTask'}} class="btn btn-primary">Add Task</button>
</form>
